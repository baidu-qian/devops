#!/bin/bash
cd $(dirname "$0")
BB_USER="{{ admin_user }}"

[ "$USER" != "${BB_USER}" ] && echo "start user must be ${BB_USER}" && exit 1

start() {
  /home/{{ admin_user }}/server/zookeeper/zookeeper/bin/zkServer.sh start /home/{{ admin_user }}/server/zookeeper/zookeeper/conf/zoo.cfg
  sleep 2
  /home/{{ admin_user }}/server/zookeeper/bin/zk_dog.sh stop
  sleep 2
  /home/{{ admin_user }}/server/zookeeper/bin/zk_dog.sh start
  # 启动后稍等以下，否则会导致kafka启不来
  sleep 10
}


dog_start() {
    /home/{{ admin_user }}/server/zookeeper/zookeeper/bin/zkServer.sh start /home/{{ admin_user }}/server/zookeeper/zookeeper/conf/zoo.cfg
}

stop() {
    kill_server
}

restart() {
    stop
    sleep 6
    start
}

status() {
    echo "status"
}

reload() {
    echo "reload"
}

kill_server() {
    sync
    /home/{{ admin_user }}/server/zookeeper/bin/zk_dog.sh stop
    echo "狗杀死!"
    for i in `ps aux | grep "/server/zookeeper"| grep -v 'grep'| grep -v "service.sh"| awk '{print $2}'`
    do
        kill -9 ${i}
    done
    sleep 3
    echo "服务停止成功！"
}

case "$1" in
    start)
        start
        ;;
    dog_start)
        dog_start
        ;;
    stop)
        stop
        ;;
    reload)
        reload
        ;;
    restart)
        restart
        ;;
    status)
        status
        ;;
    *)
        echo "Usage: { start | stop | reload | restart | status | test |dog_start }"
        exit 1
esac