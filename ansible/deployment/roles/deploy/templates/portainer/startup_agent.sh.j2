#!/bin/bash

docker run --init --name=portainer-agent \
 -v /etc/hosts:/etc/hosts \
 -v /var/lib/docker/volumes:/var/lib/docker/volumes \
 -v /var/run/docker.sock:/var/run/docker.sock \
 --env TZ=PRC \
 --env AGENT_CLUSTER_ADDR=tasks.agent \
 --network admin_network \
 -p '14101:9001' \
 --rm {{ harbor_ip }}/admin/portainer/agent:latest